rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Admins can read, create, and update any user document.
      allow read, create, update: if isAdmin();
      
      // Any authenticated user can read the general data of another user,
      // as long as the user is not disabled.
      allow read: if isAuthenticated() && !resource.data.disabled;

      // A user can update their own profile information, but not their role or balance.
      // This allows them to change their status, avatar, etc., including on sign-out.
      allow update: if isOwner(userId) && 
                    request.resource.data.role == resource.data.role &&
                    request.resource.data.balance == resource.data.balance;
    }

    // Products collection
    match /products/{productId} {
      // Admins can manage all products.
      allow read, write: if isAdmin();
      // Employees can read the product list.
      allow read: if isAuthenticated() && !resource.data.disabled;
    }

    // Balance Logs collection
    match /balanceLogs/{logId} {
      // Admins can create new log entries.
      allow create: if isAdmin();
      // Authenticated users can read logs related to them (for history).
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Status Logs collection
    match /statusLogs/{logId} {
        // Admins and owners of the log can create it.
        allow create: if isAdmin() || (isOwner(request.resource.data.userId));
        // Admins can read all status logs.
        allow read: if isAdmin();
    }

    // Purchase Requests collection
    match /purchaseRequests/{requestId} {
        // Employees can create their own purchase requests.
        allow create: if isOwner(request.resource.data.userId);
        // Admins can read and update all purchase requests.
        allow read, update: if isAdmin();
        // Employees can read their own purchase requests.
        allow read: if isOwner(resource.data.userId);
    }

    // Notifications collection
    match /notifications/{notificationId} {
        // Admins can create notifications.
        allow create: if isAdmin();
        // All authenticated users can read notifications.
        allow read: if isAuthenticated();
    }
  }
}